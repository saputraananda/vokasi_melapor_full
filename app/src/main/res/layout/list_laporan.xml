<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_laporan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#100D8B"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvKategori1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Laporan"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/titleLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Laporan Mahasiswa"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="DuplicateIds,HardcodedText" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="1 Maret 2023"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/nama_pelapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:text="Pelapor : Nana"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/nim_pelapor"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="NIM : J03030211023"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />




    <TextView
        android:id="@+id/message_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:text="Evieta tidak bisa dibuka"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        tools:ignore="HardcodedText" />





</LinearLayout>